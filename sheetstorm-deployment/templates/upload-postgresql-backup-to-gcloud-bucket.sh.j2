#!/bin/bash -e

database_name="$1"
POSTGRESQL_BACKUP_DIR={{ postgres_backup_dir }}
DATE=$(date +"%Y-%m-%d")
SHEETSTORM_VERSION="$(cd {{ sheetstorm_dir}}/; git describe --always --abbrev=16)"

if [ -z $database_name ]; then
    echo "Please supply database name argument."
    exit 1
fi
if [ ! -d $POSTGRESQL_BACKUP_DIR ]; then
    echo "The postgresql backup directory does not exist."
    exit 1
fi

NAME_OF_BACKUP_FILE="$POSTGRESQL_BACKUP_DIR/"$database_name"_${SHEETSTORM_VERSION}_${DATE}-02:00.sql.enc"
if [ ! -f $NAME_OF_BACKUP_FILE ]; then
    echo "The postgresql backup file does not exist."
    exit 1
fi

gsutil cp                                 \
    $NAME_OF_BACKUP_FILE                  \
    gs://{{ name_of_sheetstorm_bucket }}/
